<Window x:Class="PhortyFiveSeconds.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhortyFiveSeconds"
        mc:Ignorable="d"
        Title="About" Height="250" Width="400" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Topmost="True">
	<Grid>
		<StackPanel Orientation="Horizontal" Margin="10,10,0,0">
			<StackPanel Orientation="Vertical">
				<Label Name="ProgramNameLabel">Phorty-Five Seconds by PharanBrush
					Timed Image Viewer for Drawing Practice</Label>
				<Label Name="VersionLabel">Version 0.0.xx</Label>

				<TextBlock>
					For more info, visit: 
					<Hyperlink NavigateUri="https://pharan.gumroad.com" RequestNavigate="PharanLink_RequestNavigate">
						https://pharan.gumroad.com
					</Hyperlink>
				</TextBlock>
			</StackPanel>
		</StackPanel>

	</Grid>
</Window>
